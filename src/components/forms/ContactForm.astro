<form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-4 bg-white p-6 rounded-2xl shadow-card ring-1 ring-gray-100">
  <input type="hidden" name="form-name" value="contact" />
  <p class="hidden">
    <label>Donâ€™t fill this out: <input name="bot-field" /></label>
  </p>
  <div>
    <label class="block text-sm font-semibold text-neutral mb-1" for="name">Name</label>
    <input id="name" name="name" type="text" required class="w-full rounded-lg border border-gray-200 px-3 py-2 focus:border-primary focus:outline-none" />
  </div>
  <div>
    <label class="block text-sm font-semibold text-neutral mb-1" for="email">Email</label>
    <input id="email" name="email" type="email" required class="w-full rounded-lg border border-gray-200 px-3 py-2 focus:border-primary focus:outline-none" />
  </div>
  <div>
    <label class="block text-sm font-semibold text-neutral mb-1" for="phone">Phone</label>
    <input id="phone" name="phone" type="tel" required class="w-full rounded-lg border border-gray-200 px-3 py-2 focus:border-primary focus:outline-none" />
  </div>
  <div>
    <label class="block text-sm font-semibold text-neutral mb-1" for="message">Message</label>
    <textarea id="message" name="message" rows="4" class="w-full rounded-lg border border-gray-200 px-3 py-2 focus:border-primary focus:outline-none" placeholder="How can we help?"></textarea>
  </div>
  <button type="submit" class="w-full rounded-full bg-primary px-4 py-2 text-white font-semibold hover:bg-primary-dark">Send Message</button>
</form>
