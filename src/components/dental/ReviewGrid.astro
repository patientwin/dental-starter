---
const reviews = [
  {
    name: 'Alex P.',
    quote: 'The most comfortable dental visit I have ever had. The team was warm, thorough, and explained everything clearly.',
    source: 'Google',
    stars: 5,
  },
  {
    name: 'Maria L.',
    quote: 'Beautiful office, modern tech, and a gentle approach. I felt heard and cared for the entire time.',
    source: 'Google',
    stars: 5,
  },
  {
    name: 'Sam K.',
    quote: 'They fit me in quickly and fixed my chipped tooth the same day. Highly recommend this practice.',
    source: 'Google',
    stars: 5,
  },
];
---

<section class="bg-background">
  <div class="mx-auto max-w-6xl px-4 py-12 md:py-16">
    <div class="mb-8">
      <p class="text-sm uppercase tracking-wide text-primary font-semibold">Patient Love</p>
      <h2 class="font-heading text-3xl text-neutral">Why patients choose us</h2>
    </div>
    <div class="grid gap-6 md:grid-cols-3">
      {reviews.map((review) => (
        <article class="rounded-2xl bg-white p-6 shadow-card ring-1 ring-gray-100" key={review.name}>
          <p class="text-primary mb-2">{'★'.repeat(review.stars)}</p>
          <p class="text-sm text-gray-700 mb-4">“{review.quote}”</p>
          <p class="text-sm font-semibold text-neutral">{review.name}</p>
          <p class="text-xs text-gray-500">{review.source}</p>
        </article>
      ))}
    </div>
  </div>
</section>
