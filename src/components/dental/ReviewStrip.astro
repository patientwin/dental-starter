---
import { practice } from '../../data/site';
---

<section class="bg-surface-soft">
  <div class="mx-auto max-w-5xl px-4 py-8 md:px-6 lg:max-w-6xl lg:px-8">
    <div class="flex flex-col items-start gap-4 rounded-3xl bg-gradient-to-r from-brand-600 via-brand-500 to-brand-600 px-6 py-5 text-white shadow-card-soft ring-1 ring-brand-100/50 md:flex-row md:items-center md:justify-between md:px-8 md:py-6">
      <div class="flex flex-wrap items-center gap-3">
        <div class="flex items-center gap-1 text-lg" aria-hidden="true">
          {Array.from({ length: 5 }).map((_, i) => (
            <span key={i}>★</span>
          ))}
        </div>
        <div>
          <p class="text-sm font-semibold uppercase tracking-[0.18em] text-white/90">Our patients</p>
          <p class="text-base font-semibold leading-tight">500+ five-star reviews on Google</p>
        </div>
      </div>
      {practice.gmbReviewUrl && (
        <a
          href={practice.gmbReviewUrl}
          class="inline-flex items-center gap-2 rounded-full bg-white/10 px-4 py-2 text-sm font-semibold text-white ring-1 ring-white/30 backdrop-blur-sm transition hover:bg-white/15"
        >
          Read our reviews →
        </a>
      )}
    </div>
  </div>
</section>
