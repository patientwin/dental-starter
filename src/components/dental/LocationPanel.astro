---
import Button from '../ui/Button.astro';
import { practice } from '../../data/site';
---

<section class="bg-surface-soft">
  <div class="mx-auto max-w-6xl px-4 py-10 md:py-16">
    <div class="space-y-4 md:grid md:grid-cols-[minmax(0,1.1fr)_minmax(0,1.2fr)] md:items-start md:gap-8">
      <div class="space-y-5 rounded-3xl bg-surface p-6 shadow-card-soft ring-1 ring-surface-border">
        <div class="space-y-2">
          <p class="text-xs font-semibold uppercase tracking-[0.18em] text-accent-500">Visit us</p>
          <h2 class="font-heading text-3xl text-ink-900">Find our office</h2>
        </div>
        <div class="space-y-3 text-sm text-ink-700">
        <div class="flex items-start gap-3">
          <div class="mt-0.5 flex h-9 w-9 items-center justify-center rounded-full bg-brand-50 text-brand-600 ring-1 ring-surface-border">
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 21s-6-4.35-6-10a6 6 0 1 1 12 0c0 5.65-6 10-6 10z" />
              <circle cx="12" cy="11" r="2" />
            </svg>
          </div>
          <div>
            <p class="font-semibold text-ink-900">{practice.address.line1}{practice.address.line2 ? `, ${practice.address.line2}` : ''}</p>
            <p>{practice.address.city}, {practice.address.state} {practice.address.zip}</p>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <div class="flex h-9 w-9 items-center justify-center rounded-full bg-brand-50 text-brand-600 ring-1 ring-surface-border">
            <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92V21a1 1 0 0 1-1.08 1A19.86 19.86 0 0 1 3 5.08 1 1 0 0 1 4 4h4.09a1 1 0 0 1 1 .75 12.35 12.35 0 0 0 .7 1.81 1 1 0 0 1-.23 1.11L8.09 9.91a16 16 0 0 0 6 6l2.24-1.47a1 1 0 0 1 1.11-.23 12.35 12.35 0 0 0 1.81.7 1 1 0 0 1 .75 1z" />
            </svg>
          </div>
          <a href={practice.phoneHref} class="text-base font-semibold text-brand-600 hover:text-brand-700">{practice.phone}</a>
        </div>
      </div>
        <div class="rounded-2xl bg-surface-soft p-4 ring-1 ring-surface-border">
          <p class="text-sm font-semibold text-ink-900">Hours</p>
          <ul class="mt-2 space-y-1 text-sm text-ink-700">
            {practice.hours.map((entry) => (
              <li>{entry.label}: {entry.value}</li>
            ))}
          </ul>
        </div>
        <div class="flex flex-col gap-3 sm:flex-row">
          <Button href={practice.googleMapsUrl} variant="primary" class="w-full sm:w-auto">Get Directions</Button>
          <Button href="/contact" variant="outline" class="w-full sm:w-auto">Contact</Button>
        </div>
      </div>
      <div class="rounded-3xl bg-surface p-4 shadow-card-soft ring-1 ring-surface-border">
        <div class="h-52 w-full overflow-hidden rounded-3xl bg-gradient-to-br from-halo-blue via-surface-soft to-halo-mint ring-1 ring-surface-border/80 md:h-64">
          <span class="sr-only">Map of the BrightSide Dental Studio location</span>
        </div>
      </div>
    </div>
  </div>
</section>
