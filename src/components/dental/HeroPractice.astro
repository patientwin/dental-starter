---
import { Image } from "astro:assets";
import Button from '../ui/Button.astro';
import heroImage from '../../assets/hero-dental-office.png';

const { site, home } = Astro.props;
---

<section id="top" class="relative min-h-[65vh] overflow-hidden bg-ink-950 text-white">
  <div class="absolute inset-0">
    <Image
      src={heroImage}
      alt="Dentist greeting a patient in a bright, modern dental studio in Sampletown."
      widths={[640, 960, 1280, 1600]}
      sizes="(max-width: 768px) 100vw, (max-width: 1280px) 100vw, 100vw"
      loading="eager"
      fetchpriority="high"
      decoding="async"
      class="pointer-events-none absolute inset-0 h-full w-full object-cover"
    />
    <div class="pointer-events-none absolute inset-0 bg-gradient-to-br from-ink-950/80 via-ink-950/40 to-halo-mint/60"></div>
    <div class="absolute inset-x-0 -bottom-px h-px bg-gradient-to-r from-surface-soft/0 via-surface-soft/60 to-surface-soft/0"></div>
  </div>

  <div class="relative z-10 mx-auto flex max-w-6xl flex-col gap-10 px-4 py-16 md:flex-row md:items-center md:py-20 lg:gap-16">
    <div class="max-w-xl space-y-5 text-white">
      {home?.data.heroBadge && (
        <div class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-white/90 ring-1 ring-white/25 backdrop-blur-sm shadow-card-soft">
          <svg class="h-4 w-4 text-white/90" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2v3M12 19v3M4.22 4.22l2.12 2.12M17.66 17.66l2.12 2.12M2 12h3M19 12h3M4.22 19.78l2.12-2.12M17.66 6.34l2.12-2.12" />
          </svg>
          {home.data.heroBadge}
        </div>
      )}
      <div class="space-y-3">
        <h1 class="font-heading text-3xl font-semibold tracking-tight text-white sm:text-4xl lg:text-5xl">{home?.data.heroHeadline ?? site.practiceName}</h1>
        <p class="max-w-md text-sm leading-relaxed text-white/80 md:text-base">{home?.data.heroSubheadline ?? site.tagline}</p>
      </div>
      <div class="mt-2 flex flex-wrap gap-2">
        <span class="inline-flex items-center gap-2 whitespace-nowrap rounded-full bg-white/10 px-3 py-2 text-xs font-semibold uppercase tracking-wide text-white/90 ring-1 ring-white/25 backdrop-blur">
          <svg class="h-4 w-4 text-white/90" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 17l-5.09 2.67 1-5.82-4.22-4.11 5.83-.85L12 3l2.48 5.89 5.83.85-4.22 4.11 1 5.82z" />
          </svg>
          5-star rated
        </span>
      </div>
      <div class="mt-5 flex flex-col gap-3 sm:flex-row sm:flex-wrap sm:items-center">
        <Button href={home?.data.heroPrimaryCtaHref} variant="primary" class="w-full px-5 py-2.5 text-sm font-semibold text-white shadow-md shadow-brand-500/30 sm:w-auto md:text-base bg-brand-500 hover:bg-brand-600">
          {home?.data.heroPrimaryCtaLabel}
        </Button>
        <Button
          href={home?.data.heroSecondaryCtaHref}
          variant="outline"
          class="w-full border border-white/40 bg-white/10 px-5 py-2.5 text-sm font-semibold text-white backdrop-blur-sm transition hover:bg-white/15 sm:w-auto md:text-base"
        >
          {home?.data.heroSecondaryCtaLabel}
        </Button>
      </div>
      <p class="text-xs text-white/75 md:text-sm">Serving families in {site.city} and surrounding communities.</p>
    </div>
  </div>
</section>
