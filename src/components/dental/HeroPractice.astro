---
import Button from '../ui/Button.astro';
import { practice } from '../../data/site';
---

<section id="top" class="relative overflow-hidden bg-ink-900 text-white">
  <div class="absolute inset-0">
    <img
      src="/images/hero-dental-office.png"
      alt="Dentist greeting a patient in a bright, modern dental studio in Sampletown."
      class="h-full w-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-ink-900/80 via-ink-900/55 to-halo-mint/70 mix-blend-multiply"></div>
    <div class="absolute inset-x-0 -bottom-px h-px bg-gradient-to-r from-surface-soft/0 via-surface-soft/60 to-surface-soft/0"></div>
  </div>

  <div class="relative">
    <div class="mx-auto max-w-5xl px-4 py-16 md:px-6 md:py-20 lg:max-w-6xl lg:px-8 lg:py-24">
      <div class="max-w-3xl space-y-5 text-white">
        <div class="inline-flex items-center gap-2 rounded-full bg-white/10 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-white/90 ring-1 ring-white/25 backdrop-blur-sm shadow-card-soft">
          <svg class="h-4 w-4 text-white/90" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2v3M12 19v3M4.22 4.22l2.12 2.12M17.66 17.66l2.12 2.12M2 12h3M19 12h3M4.22 19.78l2.12-2.12M17.66 6.34l2.12-2.12" />
          </svg>
          Comfort-focused care
        </div>
        <div class="space-y-3">
          <h1 class="font-heading text-3xl font-semibold tracking-tight text-white sm:text-4xl lg:text-5xl">{practice.name}</h1>
          <p class="max-w-md text-sm leading-relaxed text-white/80 md:text-base">{practice.tagline}</p>
        </div>
        <div class="mt-2 flex flex-wrap gap-2">
          <span class="inline-flex items-center gap-2 whitespace-nowrap rounded-full bg-white/10 px-3 py-2 text-xs font-semibold uppercase tracking-wide text-white/90 ring-1 ring-white/25 backdrop-blur">
            <svg class="h-4 w-4 text-white/90" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 17l-5.09 2.67 1-5.82-4.22-4.11 5.83-.85L12 3l2.48 5.89 5.83.85-4.22 4.11 1 5.82z" />
            </svg>
            5-star rated
          </span>
          <span class="inline-flex items-center gap-2 whitespace-nowrap rounded-full bg-white/10 px-3 py-2 text-xs font-semibold uppercase tracking-wide text-white/90 ring-1 ring-white/20 backdrop-blur">
            <svg class="h-4 w-4 text-white/90" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="9" />
              <path d="M9 12l2 2 4-4" />
            </svg>
            Comfort-focused care
          </span>
        </div>
        <div class="mt-5 flex flex-col gap-3 sm:flex-row sm:flex-wrap sm:items-center">
          <Button href={practice.primaryCTA.href} variant="primary" class="w-full px-5 py-2.5 text-sm font-semibold text-white shadow-md shadow-brand-500/30 sm:w-auto md:text-base bg-brand-500 hover:bg-brand-600">
            {practice.primaryCTA.label}
          </Button>
          <Button
            href={practice.secondaryCTA.href}
            variant="outline"
            class="w-full border border-white/40 bg-white/10 px-5 py-2.5 text-sm font-semibold text-white backdrop-blur-sm transition hover:bg-white/15 sm:w-auto md:text-base"
          >
            {practice.secondaryCTA.label}
          </Button>
        </div>
        <p class="text-xs text-white/75 md:text-sm">Serving families in {practice.address.city} and surrounding communities.</p>
      </div>
    </div>
  </div>
</section>
