---
export interface Props {
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  class?: string;
}

const { href, type = 'button', variant = 'primary', class: className } = Astro.props;

const base =
  'inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-semibold transition-colors duration-150 focus:outline-none focus:ring-2 focus:ring-offset-2';

const variants: Record<string, string> = {
  primary: 'bg-brand-500 text-white hover:bg-brand-600 focus:ring-brand-500',
  secondary: 'bg-accent-500 text-white hover:brightness-110 focus:ring-accent-500',
  outline: 'border border-surface-border bg-surface text-ink-700 hover:bg-surface-soft focus:ring-brand-500',
  ghost: 'text-ink-700 hover:bg-surface-soft focus:ring-brand-500',
};

const classes = `${base} ${variants[variant]} ${className ?? ''}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
