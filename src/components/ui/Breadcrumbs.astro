---
export interface Crumb {
  label: string;
  href?: string;
}

interface Props {
  items: Crumb[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="mb-4 flex items-center gap-2 text-sm text-ink-600">
  {items.map((item, idx) => (
    <Fragment>
      {item.href && idx !== items.length - 1 ? (
        <a href={item.href} class="font-semibold text-brand-600 hover:text-brand-700">
          {item.label}
        </a>
      ) : (
        <span class="font-semibold text-ink-700">{item.label}</span>
      )}
      {idx !== items.length - 1 && <span class="text-ink-400">/</span>}
    </Fragment>
  ))}
</nav>
