---
import { getEntry } from "astro:content";

const practice = (await getEntry("siteSettings", "practice"))?.data ?? Astro.props.practice;
---

<div class="fixed inset-x-0 bottom-0 z-40 bg-white/95 backdrop-blur border-t border-gray-200 shadow-card md:hidden">
  <div class="mx-auto flex max-w-5xl items-center gap-3 px-4 py-3">
    <a href={practice?.phone ? `tel:${practice.phone.replace(/[^0-9+]/g, '')}` : '#'} class="flex-1 text-center rounded-full bg-primary text-white px-4 py-2 font-semibold">Call</a>
    <a href="/new-patients" class="flex-[1.5] text-center rounded-full bg-secondary text-white px-4 py-2 font-semibold">Request Appointment</a>
  </div>
</div>
