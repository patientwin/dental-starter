---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
import ContactForm from '../components/forms/ContactForm.astro';
import Button from '../components/ui/Button.astro';
import { practice } from '../data/site';
---

<BaseLayout
  title="Contact BrightSide Dental Studio | Dentist in Sampletown, MI"
  description="Call, message, or visit BrightSide Dental Studio in Sampletown, Michigan. Get driving directions, office hours, and our contact info."
>
  <Section>
    <div class="grid gap-10 md:grid-cols-[1.1fr_0.9fr] items-start">
      <div class="space-y-4">
        <p class="text-sm uppercase tracking-wide text-primary font-semibold">Contact us</p>
        <h1 class="text-3xl md:text-4xl font-heading text-neutral">Call, text, or schedule online</h1>
        <p class="text-base text-gray-700">We respond quickly to help you book visits, answer questions, or plan care. Serving Sampletown and nearby communities.</p>
        <div class="space-y-2 text-sm text-gray-700">
          <p><strong>Phone:</strong> <a href={practice.phoneHref} class="text-primary font-semibold">{practice.phone}</a></p>
          <p><strong>Email:</strong> <a href={`mailto:${practice.email}`} class="text-primary font-semibold">{practice.email}</a></p>
          <p><strong>Address:</strong> {practice.address.line1}{practice.address.line2 ? `, ${practice.address.line2}` : ''}, {practice.address.city}, {practice.address.state} {practice.address.zip}</p>
          <div>
            <p class="font-semibold text-neutral">Hours</p>
            <ul class="text-sm text-gray-700">
              {practice.hours.map((entry) => (
                <li>{entry.label}: {entry.value}</li>
              ))}
            </ul>
          </div>
        </div>
        <div class="flex flex-wrap gap-3">
          <Button href={practice.phoneHref} variant="primary">Call us</Button>
          <Button href={practice.googleMapsUrl} variant="outline">Get directions</Button>
        </div>
        <div class="rounded-2xl overflow-hidden bg-gray-100 aspect-video shadow-card ring-1 ring-gray-100">
          <iframe title="Map to BrightSide Dental Studio" src={practice.googleMapsUrl} class="h-full w-full" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <div class="rounded-2xl bg-white p-5 shadow-card ring-1 ring-gray-100 space-y-2">
          <p class="text-sm uppercase tracking-wide text-primary font-semibold">Driving tips</p>
          <p class="text-sm text-gray-700">We’re near downtown Sampletown with easy parking behind the building. Look for the blue BrightSide sign; the entrance faces Main Street.</p>
        </div>
      </div>
      <div class="space-y-4">
        <div class="rounded-2xl bg-white p-6 shadow-card ring-1 ring-gray-100">
          <h2 class="text-xl font-heading text-neutral mb-3">Send us a message</h2>
          <ContactForm />
        </div>
        <div class="rounded-2xl bg-background p-4 ring-1 ring-gray-100 space-y-2">
          <p class="text-sm font-semibold text-neutral">Need to reschedule or ask about treatment?</p>
          <p class="text-sm text-gray-700">Call or message us—our team will help quickly and confirm your next step.</p>
        </div>
      </div>
    </div>
  </Section>
</BaseLayout>
