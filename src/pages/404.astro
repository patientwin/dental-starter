---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
---

<BaseLayout title="Page not found" description="The page you’re looking for was not found." noIndex>
  <Section>
    <div class="text-center space-y-4">
      <p class="text-sm uppercase tracking-wide text-primary font-semibold">404</p>
      <h1 class="text-3xl font-heading text-neutral">Page not found</h1>
      <p class="text-gray-700">Sorry, we couldn’t find what you were looking for.</p>
      <a href="/" class="text-primary font-semibold">Back to home</a>
    </div>
  </Section>
</BaseLayout>
